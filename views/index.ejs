      <div class="column" id="score">
        <!-- Table for displaying the current leaderboard -->
        <table>
          <tr>
            <th>Player Name</th>
            <th>Qui</th>
            <th>Feur (Stiti)</th>
            <th>Ratio</th>
            <th>L</th>
            <th>Total Score</th>
          </tr>
          <!-- Loop through the sorted list of players and display their stats in the table -->
          <!--
          <% players.forEach(player => { %>
            <tr>
              <td><%= player.name %></td>
              <td><%= player.qui %></td>
              <td><%= player.feur %></td>
